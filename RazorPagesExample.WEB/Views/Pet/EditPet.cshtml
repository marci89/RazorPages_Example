@using Microsoft.AspNetCore.Mvc.Localization
@using RazorPagesExample.Localization
@inject IHtmlLocalizer<SharedResources> Localizer

@model PetUpdateViewModel

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Localizer["PetUpdate"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row justify-content-center">

        <form asp-controller="Pet" asp-action="UpdatePet" method="post" class="mb-0">
            <div class="container-fluid pl-4 pr-4">

                @* you have to add id, too if you want to add the form to handle the controller action. Hidden input is the best way.*@
                <input asp-for="Id" type="hidden" />

                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Name" type="text" class="form-control" required />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group row mt-3">
                    <label asp-for="Age" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Age" type="number" class="form-control" required />
                    </div>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">@Localizer["Edit"]</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="closeModal()">@Localizer["Cancel"]</button>
                </div>
            </div>
        </form>

    </div>
</div>





