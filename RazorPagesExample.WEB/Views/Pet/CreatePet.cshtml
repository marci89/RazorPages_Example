@using Microsoft.AspNetCore.Mvc.Localization
@using RazorPagesExample.Localization
@inject IHtmlLocalizer<SharedResources> Localizer

@model PetCreateViewModel

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Localizer["PetCreate"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row justify-content-center">

        <form asp-controller="Pet" asp-action="CreatePet" method="post" class="mb-0">
            <div class="container-fluid pl-4 pr-4">

                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Name" type="text" class="form-control" required />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group row mt-3">
                    <label asp-for="Type" class="col-sm-4 col-form-label">@Localizer["Type"]</label>
                    <div class="col-sm-8">
                        <select asp-for="Type" class="form-control" required>
                            <option value="">@Localizer["SelectType"]</option>
                            @foreach (PetTypeViewModel type in Enum.GetValues(typeof(PetTypeViewModel)))
                            {
                                <option value="@type">@Localizer[type.ToString()]</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group row mt-3">
                    <label asp-for="Age" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input asp-for="Age" type="number" class="form-control" required />
                    </div>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-primary">@Localizer["Create"]</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="closeModal()">@Localizer["Cancel"]</button>
                </div>
            </div>
        </form>

    </div>
</div>





