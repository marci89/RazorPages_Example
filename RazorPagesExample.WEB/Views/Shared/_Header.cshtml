@using Microsoft.AspNetCore.Mvc.Localization
@using RazorPagesExample.Localization
@inject IHtmlLocalizer<SharedResources> Localizer

<header class="page-header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Home")">@Localizer["Home"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "User")">@Localizer["Users"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Pet")">@Localizer["Pets"]</a>
                    </li>
                </ul>
                 @*Profile dropdown*@
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle  text-light text-decoration-non" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        @Localizer["Profile"]
                    </a>
                    <ul class="dropdown-menu " aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="@Url.Action("EditProfile", "Account")">@Localizer["EditProfile"]</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">@Localizer["Logout"]</a></li>
                    </ul>
                </div>
                <div>
                   @* Select language*@
                    @await Html.PartialAsync("_SelectLanguagePartial")
                </div>
            </div>
        </div>
    </nav>
</header>