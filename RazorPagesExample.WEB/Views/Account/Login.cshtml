@model LoginViewModel
@{
    Layout = "_SimpleLayout";
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row top">
        <div class="container-fluid mt-5"></div>
        <div class="container loginbox">
            <form asp-controller="Account" asp-action="Login" method="post" class="mb-0">
                <h4 class="text-center mb-4"><b>Login</b></h4>
                <div class="container-fluid pl-4 pr-4">
                    <div class="form-group row">
                        <label asp-for="Username" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Username" type="text" class="form-control" placeholder="Username" required />
                        </div>
                        <span asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group row mt-3">
                        <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required />
                        </div>
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="text-center mt-3">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <button type="button" class="btn btn-primary">Registration</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

