@using Microsoft.AspNetCore.Mvc.Localization
@using RazorPagesExample.Localization
@inject IHtmlLocalizer<SharedResources> Localizer

@model LoginViewModel
@{
    Layout = "_SimpleLayout";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Account" asp-action="Login" method="post" class="mb-0">
                    <h4 class="text-center mb-4"><b>@Localizer["Login"]</b></h4>
                    <div class="container-fluid pl-4 pr-4">
                        <div class="form-group row">
                            <label asp-for="Username" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Username" type="text" class="form-control" required />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group row mt-3">
                            <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Password" type="password" class="form-control" required />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">@Localizer["Login"]</button>
                            @* window.location.href example for routing*@
                            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Registration", "Account")';">@Localizer["Registration"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

