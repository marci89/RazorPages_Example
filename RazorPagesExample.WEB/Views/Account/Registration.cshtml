@using Microsoft.AspNetCore.Mvc.Localization
@using RazorPagesExample.Localization
@inject IHtmlLocalizer<SharedResources> Localizer

@model RegistrationViewModel
@{
    ViewData["Title"] = @Localizer["Registration"];
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-body">
                <form asp-controller="Account" asp-action="CreateUser" method="post" class="mb-0">
                    <div class="container-fluid pl-4 pr-4">

                        <div class="form-group row">
                            <label asp-for="Username" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Username" type="text" class="form-control" required />
                            </div>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                          <div class="form-group row mt-3">
                            <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Email" type="text" class="form-control" required />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="DateOfBirth" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="DateOfBirth" type="date" class="form-control" required />
                            </div>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="Password" type="password" class="form-control" required />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group row mt-3">
                            <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-primary">@Localizer["Registration"]</button>
                            <a class="btn btn-danger" href="@Url.Action("Index", "Home")">@Localizer["Cancel"]</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

